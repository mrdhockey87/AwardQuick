<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:overlay="clr-namespace:AwardQuick.Overlays"
             x:Class="AwardQuick.Overlays.CustomDialogPage"
             BackgroundColor="Transparent"
             x:DataType="overlay:CustomDialogPage"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             Shell.PresentationMode="ModalAnimated">
    <!-- Correct syntax for BackButtonBehavior -->
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <Grid>
        <Border BackgroundColor="{StaticResource PrimaryText}"
                Padding="10"
                Margin="10"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                StrokeThickness="0"
                Stroke="Transparent">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0"
                       Grid.Column="0"
                       x:Name="TitleLabel"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       BackgroundColor="{StaticResource PrimaryText}"
                       TextColor="{StaticResource PrimaryBackground}" />

                <Label Grid.Row="1"
                       Grid.Column="0"
                       x:Name="MessageLabel"
                       LineBreakMode="WordWrap"
                       FontSize="16"
                       Margin="20,5,25,5"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       BackgroundColor="{StaticResource PrimaryBackground}"
                       TextColor="{StaticResource Gray500}" />

                <StackLayout Grid.Row="2"
                             Grid.Column="0"
                             x:Name="InputContainer"
                             IsVisible="False">
                    <Entry x:Name="InputEntry"
                           Placeholder="Enter text..."
                           Margin="0,10,0,0" />
                </StackLayout>


                <Grid Grid.Row="3"
                      Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0"
                            Grid.Column="1"
                            x:Name="CancelButton"
                            Text="Cancel"
                            BackgroundColor="{StaticResource PrimaryText}"
                            TextColor="{StaticResource PrimaryBackground}"
                            IsVisible="False"
                            Clicked="OnCancelClicked"
                            MinimumWidthRequest="80" />

                    <Button Grid.Row="0"
                            Grid.Column="2"
                            x:Name="OkButton"
                            Text="OK"
                            BackgroundColor="{StaticResource PrimaryText}"
                            TextColor="{StaticResource PrimaryBackground}"
                            Clicked="OnOkClicked"
                            MinimumWidthRequest="80" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentPage>