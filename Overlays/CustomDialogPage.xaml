<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:overlay="clr-namespace:AwardQuick.Overlays"
             x:Class="AwardQuick.Overlays.CustomDialogPage"
             BackgroundColor="Transparent"
             x:DataType="overlay:CustomDialogPage"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             Shell.PresentationMode="ModalAnimated">
    <!-- Correct syntax for BackButtonBehavior -->
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <Grid BackgroundColor="#80000000">
        <Border BackgroundColor="{StaticResource PrimaryBackground}"
                Margin="0"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                StrokeThickness="2"
                StrokeShape="Rectangle"
                Stroke="{StaticResource PrimaryText}"
                Padding="0">

            <Grid Margin="0" Padding="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Title Bar Row -->
                <Grid Grid.Row="0"
                      Grid.Column="0"
                      BackgroundColor="{StaticResource PrimaryText}">
                    <StackLayout Orientation="Horizontal"
                                 VerticalOptions="Center"
                                 Padding="10,0">

                        <!-- Optional Icon Image -->
                        <Image x:Name="IconImage"
                               Source="{Binding IconSource}"
                               IsVisible="{Binding IsIconVisible}"
                               WidthRequest="22"
                               HeightRequest="22"
                               VerticalOptions="Center"
                               Margin="0,2,8,2" />

                        <!-- Title Label -->
                        <Label x:Name="TitleLabel"
                               Text="{Binding Title}"
                               FontSize="18"
                               Margin="0,2,0,2"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               TextColor="{StaticResource PrimaryBackground}" />
                    </StackLayout>
                </Grid>

                <!-- Message Row -->
                <Grid Grid.Row="1"
                      Grid.Column="0"
                      BackgroundColor="{StaticResource PrimaryBackground}">
                    <Label x:Name="MessageLabel"
                           LineBreakMode="WordWrap"
                           FontSize="16"
                           Margin="20,15,20,15"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Start"
                           VerticalOptions="Center"
                           TextColor="{StaticResource PrimaryText}" />
                </Grid>

                <!-- Input Row -->
                <Grid Grid.Row="2"
                      Grid.Column="0"
                      BackgroundColor="{StaticResource PrimaryBackground}">
                    <StackLayout x:Name="InputContainer"
                                 IsVisible="False"
                                 Margin="20,0,20,15">
                        <Entry x:Name="InputEntry"
                               Placeholder="Enter text..."
                               Margin="0,10,0,0" />
                    </StackLayout>
                </Grid>

                <!-- Button Row -->
                <Grid Grid.Row="3"
                      Grid.Column="0"
                      BackgroundColor="{StaticResource PrimaryBackground}"
                      Padding="20,0,20,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1"
                            x:Name="CancelButton"
                            Text="Cancel"
                            BackgroundColor="{StaticResource Gray300}"
                            TextColor="{StaticResource PrimaryText}"
                            IsVisible="False"
                            Clicked="OnCancelClicked"
                            MinimumWidthRequest="80"
                            Margin="0,0,10,0" />

                    <Button Grid.Column="2"
                            x:Name="OkButton"
                            Text="OK"
                            BackgroundColor="{StaticResource PrimaryText}"
                            TextColor="{StaticResource PrimaryBackground}"
                            Clicked="OnOkClicked"
                            MinimumWidthRequest="80" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentPage>