<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:AwardQuick.PageModels"
             xmlns:models="clr-namespace:AwardQuick.Models"
             xmlns:controls="clr-namespace:AwardQuick.Pages.Controls"
             xmlns:pullToRefresh="clr-namespace:Syncfusion.Maui.Toolkit.PullToRefresh;assembly=Syncfusion.Maui.Toolkit"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AwardQuick.Pages.MainPage"
             x:DataType="pageModels:MainPageModel"
             BackgroundColor="{StaticResource PrimaryBackground}"
             x:Name="OverviewPage"
             Title="Award Quick">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid BackgroundColor="{StaticResource PrimaryBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="0.5*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
                   Grid.Row="0"
                   HeightRequest="20"
                   Source="blank_space.png"
                   VerticalOptions="Start"
                   Aspect="AspectFit" />
            <Image Grid.Column="0"
                   Grid.Row="1"
                   HeightRequest="250"
                   Source="title.png"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Aspect="AspectFit" />
            <Image Grid.Column="0"
                   Grid.Row="2"
                   HeightRequest="250"
                   Source="homeimage.png"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Aspect="AspectFit" />
            <Label Grid.Column="0"
                   Grid.Row="3"
                   Text="Use the Menu to the left to get started..."
                   TextColor="{StaticResource HomePageText}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="End"
                   FontSize="30" />
            <Grid Grid.Column="0"
                  Grid.Row="4"
                  VerticalOptions="End">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                       Grid.Row="0"
                       Source="blank_space.png"
                       VerticalOptions="Start"
                       Aspect="AspectFit" />
                <Label Grid.Column="1"
                       Grid.Row="0"
                       Text="View License Agreement"
                       HorizontalTextAlignment="Center"
                       HorizontalOptions="Start"
                       TextColor="{StaticResource Gray500}"
                       FontSize="10" />
                <Label Grid.Column="2"
                       Grid.Row="0"
                       HorizontalOptions="End"
                       x:Name="VersionLabel"
                       Text="Version"
                       TextColor="{StaticResource Gray500}"
                       FontSize="10" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
