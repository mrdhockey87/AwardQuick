	  </MauiXaml>
	  <MauiXaml Update="Views\WrittingToolsView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Data\" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\PdfFormFramework\PdfFormFramework\PdfFormFramework.csproj" />
	</ItemGroup>
	
</Project>
