<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AwardQuick.ViewModels"
             xmlns:overlay="clr-namespace:AwardQuick.Overlays"
             xmlns:controls="clr-namespace:AwardQuick.CustomControl"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Gray300}"
             x:Class="AwardQuick.Views.ReferencesView"
             Title="References">
    <ContentPage.BindingContext>
        <viewModels:ReferencesViewModel x:Name="ReferencesViewModel" />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <Label Grid.Row="0"
                   Grid.Column="0"
                   TextColor="{DynamicResource PrimaryText}"
                   FontSize="24"
                   FontAttributes="Bold"
                   Margin="10"
                   HorizontalOptions="Fill"
                   VerticalOptions="Center"
                   HorizontalTextAlignment="Start"
                   Text="References" />
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Clicked="OnBackClicked"
                    Text="ðŸ ¼ Back"
                    FontSize="20"
                    HorizontalOptions="End"
                    TextColor="{DynamicResource PrimaryText}"
                    ContentLayout="Left,5" />

            <!-- References List -->
            <Grid Grid.Row="1"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Margin="0,20,0,20"
                  HorizontalOptions="Center"
                  VerticalOptions="Fill">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <controls:ImageLabelButtonControl Grid.Row="0"
                                                  Grid.Column="0"
                                                  HorizontalOptions="Center"
                                                  VerticalOptions="Fill"
                                                  Text="AR 600-8-22 - Military Awards"
                                                  HeightRequest="100"
                                                  WidthRequest="450"
                                                  Command="{Binding OpenAR600_8_22Command}"
                                                  ImageSource="pdficon.png"
                                                  ImageAspect="AspectFit"
                                                  LabelMargin="10,0,0,0"
                                                  BackgroundColor="{DynamicResource Secondary}"
                                                  TextSize="18"
                                                  NormalBackgroundColor="{DynamicResource PrimaryBackground}"
                                                  NormalTextColor="{DynamicResource PrimaryText}"
                                                  HoverBackgroundColor="{DynamicResource AppButtonFocusBackground}"
                                                  HoverTextColor="{DynamicResource PrimaryText}"
                                                  PressedBackgroundColor="{DynamicResource Grey400}"
                                                  PressedTextColor="{DynamicResource PrimaryBackground}"
                                                  DisabledBackgroundColor="{DynamicResource Gray600}"
                                                  DisabledTextColor="{DynamicResource Gray900}" />

                <controls:ImageLabelButtonControl Grid.Row="1"
                                                  Grid.Column="0"
                                                  HorizontalOptions="Center"
                                                  VerticalOptions="Fill"
                                                  Text="DA Memo 600-8-22 - LOM and Lesser Awards"
                                                  HeightRequest="100"
                                                  WidthRequest="450"
                                                  Command="{Binding OpenM600_8_22Command}"
                                                  ImageSource="pdficon.png"
                                                  ImageAspect="AspectFit"
                                                  LabelMargin="10,0,0,0"
                                                  BackgroundColor="{DynamicResource Secondary}"
                                                  TextSize="18"
                                                  NormalBackgroundColor="{DynamicResource PrimaryBackground}"
                                                  NormalTextColor="{DynamicResource PrimaryText}"
                                                  HoverBackgroundColor="{DynamicResource AppButtonFocusBackground}"
                                                  HoverTextColor="{DynamicResource PrimaryText}"
                                                  PressedBackgroundColor="{DynamicResource Grey400}"
                                                  PressedTextColor="{DynamicResource PrimaryBackground}"
                                                  DisabledBackgroundColor="{DynamicResource Gray600}"
                                                  DisabledTextColor="{DynamicResource Gray900}" />

                <controls:ImageLabelButtonControl Grid.Row="2"
                                                  Grid.Column="0"
                                                  HorizontalOptions="Center"
                                                  VerticalOptions="Fill"
                                                  Text="Wear &amp; Appearance Of Army Uniforms And Insignia"
                                                  HeightRequest="100"
                                                  WidthRequest="450"
                                                  Command="{Binding OpenAR_670_1Command}"
                                                  ImageSource="pdficon.png"
                                                  ImageAspect="AspectFit"
                                                  LabelMargin="10,0,0,0"
                                                  BackgroundColor="{DynamicResource Secondary}"
                                                  TextSize="18"
                                                  NormalBackgroundColor="{DynamicResource PrimaryBackground}"
                                                  NormalTextColor="{DynamicResource PrimaryText}"
                                                  HoverBackgroundColor="{DynamicResource AppButtonFocusBackground}"
                                                  HoverTextColor="{DynamicResource PrimaryText}"
                                                  PressedBackgroundColor="{DynamicResource Grey400}"
                                                  PressedTextColor="{DynamicResource PrimaryBackground}"
                                                  DisabledBackgroundColor="{DynamicResource Gray600}"
                                                  DisabledTextColor="{DynamicResource Gray900}" />

                <controls:ImageLabelButtonControl Grid.Row="3"
                                                  Grid.Column="0"
                                                  HorizontalOptions="Center"
                                                  VerticalOptions="Fill"
                                                  Text="AR 600-8-2 - Suspension Of Favorable Personnel Actions (FLAG)"
                                                  HeightRequest="100"
                                                  WidthRequest="450"
                                                  Command="{Binding OpenAR_600_8_2Command}"
                                                  ImageSource="pdficon.png"
                                                  ImageAspect="AspectFit"
                                                  LabelMargin="10,0,0,0"
                                                  BackgroundColor="{DynamicResource Secondary}"
                                                  TextSize="18"
                                                  NormalBackgroundColor="{DynamicResource PrimaryBackground}"
                                                  NormalTextColor="{DynamicResource PrimaryText}"
                                                  HoverBackgroundColor="{DynamicResource AppButtonFocusBackground}"
                                                  HoverTextColor="{DynamicResource PrimaryText}"
                                                  PressedBackgroundColor="{DynamicResource Grey400}"
                                                  PressedTextColor="{DynamicResource PrimaryBackground}"
                                                  DisabledBackgroundColor="{DynamicResource Gray600}"
                                                  DisabledTextColor="{DynamicResource Gray900}" />

                <overlay:ProgressOverlay x:Name="progressOverlay"
                                         Grid.Row="1"
                                         Grid.Column="0" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>