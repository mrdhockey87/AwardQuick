<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AwardQuick.ViewModels"
             xmlns:overlay="clr-namespace:AwardQuick.Overlays"
             xmlns:controls="clr-namespace:PdfFormFramework.Controls;assembly=PdfFormFramework"
             xmlns:models="clr-namespace:AwardQuick.Models"
             xmlns:helpers="clr-namespace:AwardQuick.FontHelpers"
             x:Class="AwardQuick.Views.PdfFileView"
             x:Name="PdfViewForm"
             BackgroundColor="{StaticResource PrimaryBackground}"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             Loaded="Page_Loaded"
             Title="PDF Pages">

    <!-- Hide the Shell back button on this page -->
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />   <!-- header -->
            <RowDefinition Height="*" />      <!-- main content -->
            <RowDefinition Height="Auto" />   <!-- footer buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Header: Label on the left, Back button on the right -->
        <Label Grid.Row="0"
               Grid.Column="0"
               HorizontalOptions="Start"
               VerticalOptions="Center"
               HorizontalTextAlignment="Start"
               Margin="18,10,0,10"
               FontSize="22"
               TextColor="{DynamicResource PrimaryText}"
               Text="Examples" />

        <Button Grid.Row="0"
                Grid.Column="1"
                Text="ðŸ ¼ Back"
                Padding="10,6"
                Margin="8"
                HorizontalOptions="End"
                VerticalOptions="Center"
                BackgroundColor="{StaticResource Gray400}"
                TextColor="{DynamicResource PrimaryText}"
                Clicked="OnPageBackClicked" />

        <!-- Main content: PDF Form View in a Border -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Border x:Name="PdfContainer"
                    BackgroundColor="{StaticResource PrimaryBackground}"
                    Stroke="{StaticResource Gray500}"
                    StrokeThickness="0"
                    Margin="-13,-5,-13,-10">
                <controls:PdfInteractiveFormView x:Name="FormView"
                                                 x:TypeArguments="models:PdfFormData"
                                                 HorizontalOptions="FillAndExpand"
                                                 VerticalOptions="FillAndExpand"
                                                 BackgroundColor="{StaticResource PrimaryBackground}" />
            </Border>
        </Grid>

        <!-- Buttons (footer row) -->
        <FlexLayout
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Padding="10"
            IsVisible="False"
            HorizontalOptions="Fill"
            JustifyContent="SpaceEvenly"
            Direction="Row">
            <Button
                Text="Email Form"
                TextColor="{DynamicResource PrimaryText}"
                BackgroundColor="{StaticResource Gray400}"
                Clicked="OnEmailClicked" />
            <Button
                Text="Print"
                TextColor="{DynamicResource PrimaryText}"
                BackgroundColor="{StaticResource Gray400}"
                Clicked="OnPrintClicked" />
        </FlexLayout>

        <!-- Progress overlay spanning entire page -->
        <overlay:ProgressOverlay x:Name="progressOverlay"
                                 Grid.Row="0" Grid.RowSpan="3"
                                 Grid.Column="0" Grid.ColumnSpan="2" />
    </Grid>
</ContentPage>