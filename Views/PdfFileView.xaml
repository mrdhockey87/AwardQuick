<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AwardQuick.ViewModels"
             xmlns:overlay="clr-namespace:AwardQuick.Overlays"
             xmlns:controls="clr-namespace:PdfFormFramework.Controls;assembly=PdfFormFramework"
             xmlns:models="clr-namespace:AwardQuick.Models"
             xmlns:helpers="clr-namespace:AwardQuick.FontHelpers"
             x:Class="AwardQuick.Views.PdfFileView"
             x:Name="PdfViewForm"
             BackgroundColor="{StaticResource PrimaryBackground}"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             Loaded="Page_Loaded"
             Title="PDF Pages">

    <!-- Hide the Shell back button on this page -->
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- PDF Form View in a Border -->
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                x:Name="PdfContainer"
                BackgroundColor="White"
                Stroke="Gray"
                StrokeThickness="1"
                Margin="5">
            <!-- Wrap content in a Grid so we can overlay a button -->
            <Grid>
                <!-- Main PDF control -->
                <controls:PdfInteractiveFormView
                    x:Name="FormView"
                    x:TypeArguments="models:PdfFormData"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    HeightRequest="600"
                    BackgroundColor="White" />

                <!-- Overlay button in top-right of the Border -->
                <Button
                    Text="ðŸ ¼ Back"
                    Padding="10,6"
                    Margin="8"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Clicked="OnPageBackClicked" />
            </Grid>
        </Border>

        <!-- Buttons (row 2) -->
        <FlexLayout
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Padding="10"
            HorizontalOptions="Fill"
            JustifyContent="SpaceEvenly"
            Direction="Row">
            <Button
                Text="Email Form"
                TextColor="Black"
                BackgroundColor="LightGray"
                Clicked="OnEmailClicked" />
            <Button
                Text="Print"
                TextColor="Black"
                BackgroundColor="LightGray"
                Clicked="OnPrintClicked" />
        </FlexLayout>

        <!-- Progress overlay on top -->
        <overlay:ProgressOverlay x:Name="progressOverlay"
                                 Grid.Row="0"
                                 Grid.Column="0"
                                 Grid.ColumnSpan="2" />
    </Grid>
</ContentPage>