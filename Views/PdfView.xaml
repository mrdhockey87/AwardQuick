        <!-- PDF Form View (row 1) -->
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                BackgroundColor="White"
                Stroke="Gray"
                StrokeThickness="1"
                Margin="5">
            <controls:PdfInteractiveFormView
                x:Name="FormView"
                x:TypeArguments="models:PdfFormData"
                HeightRequest="600"
                BackgroundColor="White" />
        </Border>

        <!-- Buttons (row 2) -->
        <FlexLayout
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Padding="10"
            HorizontalOptions="Fill"
            JustifyContent="SpaceEvenly"
            Direction="Row">
            <Button
                Text="Email Form"
                TextColor="Black"
                BackgroundColor="LightGray"
                Clicked="OnEmailClicked" />
            <Button
                Text="Print"
                TextColor="Black"
                BackgroundColor="LightGray"
                Clicked="OnPrintClicked" />
        </FlexLayout>

        <!-- Progress overlay on top -->
        <overlay:ProgressBarOverlay x:Name="progressBarOverlay"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2" />
    </Grid>
