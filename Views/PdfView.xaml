<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AwardQuick.ViewModels"
             xmlns:overlay="clr-namespace:AwardQuick.Overlays"
             xmlns:controls="clr-namespace:PdfFormFramework.Controls;assembly=PdfFormFramework"
             xmlns:models="clr-namespace:AwardQuick.Models"
             xmlns:helpers="clr-namespace:AwardQuick.FontHelpers"
             x:DataType="viewModels:PdfViewModel"
             x:Class="AwardQuick.Views.PdfView"
             x:Name="PdfViewForm"
             BackgroundColor="{StaticResource PrimaryBackground}"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             Loaded="Page_Loaded"
             Title="PDF Pages">

    <ContentPage.BindingContext>
        <viewModels:PdfViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
