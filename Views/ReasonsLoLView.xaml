<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AwardQuick.ViewModels"
             xmlns:overlay="clr-namespace:AwardQuick.Overlays"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AwardQuick.Views.ReasonsLoLView"
             Title="Reasons for Letters of Lateness">

    <ContentPage.BindingContext>
        <viewModels:ReasonsLoLViewModel /> <!-- x:Name="ReasonsLoLViewModel" -->
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid HorizontalOptions="Fill"
              BackgroundColor="{StaticResource PrimaryBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Text="Reasons for Letters of Lateness"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Start"
                   TextDecorations="Underline"
                   TextColor="{StaticResource AppButtonText}"
                   BackgroundColor="{StaticResource PrimaryBackground}"
                   FontAttributes="Bold"
                   FontSize="Large" />
            <Button Grid.Row="0"
                    Grid.Column="1"
                    HeightRequest="30"
                    FontSize="16"
                    Margin="0,0,0,0"
                    Padding="5,0,10,0"
                    Command="{Binding BackClickCommand}"
                    Style="{StaticResource WhiteBackButtonStyle}"
                    Text="Back" />
            <WebView Grid.Row="1"
                     Grid.Column="0"
                     Grid.ColumnSpan="2"
                     HorizontalOptions="Fill">
                <WebView.Source>
                    <HtmlWebViewSource Html="{Binding ReasonsHtml}" />
                </WebView.Source>
            </WebView>
            
            <overlay:ProgressOverlay x:Name="progressOverlay"
                                     Grid.Row="1"
                                     Grid.Column="0" />
        </Grid>
    </ContentPage.Content>
</ContentPage>